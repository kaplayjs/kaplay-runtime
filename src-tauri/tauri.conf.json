{
  "build": {
    "beforeDevCommand": "pnpm web:dev",
    "beforeBuildCommand": "pnpm web:build",
    "devPath": "http://localhost:4321",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "kaplay-runtime",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "fs": {
        "all": true,
        "scope": ["**"]
      },
      "shell": {
        "all": true
      },
      "path": {
        "all": true
      },
      "process": {
        "all": true
      }
    },
    "windows": [
      {
        "title": "kaplay-runtime",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.kaplayjs.runtime",
      "icon": [
        "icons/favicon.png",
        "icons/favicon.icns",
        "icons/favicon.ico"
      ]
    }
  }
}
